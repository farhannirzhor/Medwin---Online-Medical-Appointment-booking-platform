@model List<Appointment>

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Manage Appointments</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th>Action</th>
            <th>Prescription</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>@appt.PatientName</td>
                <td>@appt.Doctor.FullName</td>
                <td>@appt.AppointmentDate.ToShortDateString()</td>
                <td>@appt.AppointmentTime</td>
                <td>
                    <span class="badge
                            @(appt.Status == "Approved" ? "badge-success" :
                                                    appt.Status == "Rejected" ? "badge-danger" :
                                                    "badge-warning")">
                    @appt.Status
                </span>
            </td>
            <td>
                @if (string.IsNullOrEmpty(appt.PrescriptionFilePath))
                    {
                        <form asp-action="UploadPrescription" asp-controller="Admin"
                              method="post" enctype="multipart/form-data">

                            <input type="hidden" name="appointmentId" value="@appt.Id" />

                            <input type="file" name="prescriptionFile" required />
                            <br />
                            <button type="submit" class="btn btn-sm btn-success mt-1">
                                Upload
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">Uploaded</span>
                    }

            </td>
            <td>
                    @if (appt.Status == "Pending")
                    {
                        <a asp-action="Approve" asp-route-id="@appt.Id"
                           class="btn btn-success btn-sm">
                            Approve
                        </a>

                        <a asp-action="Reject" asp-route-id="@appt.Id"
                           class="btn btn-danger btn-sm">
                            Reject
                        </a>
                    }
                    @if (appt.Status == "Approved")
                    {
                        if (string.IsNullOrEmpty(appt.PrescriptionFilePath))
                        {
                            <form asp-action="UploadPrescription"
                                  asp-controller="Admin"
                                  method="post"
                                  enctype="multipart/form-data">

                                <input type="hidden" name="appointmentId" value="@appt.Id" />
                                <input type="file" name="prescriptionFile" required />
                                <br />
                                <button type="submit" class="btn btn-sm btn-success mt-1">
                                    Upload
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="text-success">Uploaded</span>
                        }
                    }
                    else
                    {
                        <span>-</span>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
