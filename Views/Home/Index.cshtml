@section Scripts {
    <script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap'
        });

        $('#timepicker').timepicker({
            uiLibrary: 'bootstrap'
        });

        function recommendDoctor() {
            const problem = document.querySelector('[name="ProblemDescription"]').value.toLowerCase();

        if (!problem) {
            alert("Please describe your problem first.");
            return;
        }

        if (problem.includes("heart")) {
            alert("Recommended Doctor: Cardiologist");
        } else if (problem.includes("brain") || problem.includes("head")) {
            alert("Recommended Doctor: Neurologist");
        } else {
            alert("Recommended Doctor: General Physician");
        }

        }

    </script>

}
