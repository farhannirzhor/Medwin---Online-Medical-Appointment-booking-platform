<!-- appointment section start -->
<div class="appointment_section">
    <div class="container">
        <div class="appointment_box">

            <!-- ✅ APPOINTMENT TITLE (YOU WERE MISSING THIS) -->
            <h1 class="appointment_taital text-center mb-4">
                Book <span style="color:#0cb7d6;">Appointment</span>
            </h1>

            <!-- ✅ APPOINTMENT FORM -->
            <form asp-controller="Appointment" asp-action="Book" method="post">

                <!-- TEMP PatientId (until login system) -->
                <input type="hidden" name="PatientId" value="1" />

                <div class="appointment_section_2">

                    <div class="row">
                        <!-- Patient Name -->
                        <div class="col-md-4">
                            <p class="doctorname_text">Patient Name</p>
                            <input type="text"
                                   class="email_text"
                                   name="PatientName"
                                   required />
                        </div>
                        <div class="col-md-4">
                            <p class="doctorname_text">Email</p>
                            <input type="email"
                                   class="email_text"
                                   name="PatientEmail"
                                   required />
                        </div>


                        <!-- Doctor -->
                        <div class="col-md-4">
                            <p class="doctorname_text">Doctor's Name</p>
                            <select class="form-control"
                                    name="DoctorId"
                                    required>
                                <option value="">Select Doctor</option>
                                <option value="1">Dr. Humour (Cardiology)</option>
                                <option value="2">Dr. Jenni (Neurology)</option>
                            </select>
                        </div>

                        <!-- Date -->
                        <div class="col-md-4">
                            <p class="doctorname_text">Choose Date</p>
                            <input type="date"
                                   class="form-control"
                                   name="AppointmentDate"
                                   required />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <!-- Time -->
                        <div class="col-md-4">
                            <p class="doctorname_text">Choose Time</p>
                            <select class="form-control"
                                    name="AppointmentTime"
                                    required>

                                <option value="">Select Time</option>
                                <option value="10:00 AM">10:00 AM</option>
                                <option value="10:30 AM">10:30 AM</option>
                                <option value="11:00 AM">11:00 AM</option>
                                <option value="11:30 AM">11:30 AM</option>

                            </select>

                        </div>

                        <!-- Problem -->
                        <div class="col-md-8">
                            <p class="doctorname_text">Describe Your Problem</p>
                            <textarea class="form-control"
                                      name="ProblemDescription"
                                      rows="4"
                                      required></textarea>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12 text-center">

                            <div id="recommendedDoctorBox"
                                 class="alert alert-info text-center d-none">
                            </div>

                            <button type="button"
                                    class="btn btn-info d-block mx-auto mb-3"
                                    onclick="recommendDoctor()">
                                Get Recommended Doctor
                            </button>

                            <button type="submit"
                                    class="btn btn-primary d-block mx-auto">
                                Book Appointment
                            </button>

                        </div>
                    </div>


                </div>
            </form>

        </div>
    </div>
</div>
