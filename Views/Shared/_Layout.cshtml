    <script>
        function recommendDoctor() {
            const problem = document.querySelector(
                'textarea[name="ProblemDescription"]'
            ).value.toLowerCase();

            let doctor = "General Physician";

            if (problem.includes("heart")) {
                doctor = "Dr. Humour (Cardiology)";
            }
            else if (problem.includes("brain") || problem.includes("head")) {
                doctor = "Dr. Jenni (Neurology)";
            }

            const box = document.getElementById("recommendedDoctorBox");
            box.classList.remove("d-none");
            box.innerText = "Recommended Doctor: " + doctor;
        }
    </script>

